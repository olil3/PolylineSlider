<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <olil3.polylineSlider.uiComponents.PolylineSliderGraph
            android:id="@+id/polyline_slider_graph"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@id/polyline_x_axis"
            app:layout_constraintBottom_toTopOf="@+id/polyline_x_axis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/polyline_y_axis" />

        <olil3.polylineSlider.uiComponents.Axis
            android:id="@+id/polyline_x_axis"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <olil3.polylineSlider.uiComponents.Axis
            android:id="@+id/polyline_y_axis"
            android:layout_width="0dp"
            android:layout_height="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
