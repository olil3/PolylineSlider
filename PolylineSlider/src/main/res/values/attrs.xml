<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PolylineSlider">
        <attr name="number_of_data_points" format="integer" />
        <attr name="is_slider_track_visible" format="enum">
            <enum name="No" value="0" />
            <enum name="Yes" value="255" />
        </attr>
        <attr name="thumb_color" format="color" />
        <attr name="slider_color" format="color" />
        <attr name="gradient_color" format="color" />
        <attr name="x_axis_unit" format="string" />
        <attr name="x_axis_custom_values" format="reference" />
        <attr name="y_axis_unit" format="string" />
        <attr name="y_axis_max_value" format="float" />
        <attr name="y_axis_min_value" format="float" />
        <attr name="y_axis_initial_value" format="float" />
    </declare-styleable>

